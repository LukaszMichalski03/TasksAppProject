<UserControl x:Class="TasksProject.Components.CurrentUserDetailsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TasksProject.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Username}" FontSize="40" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" Margin="0 0 0 30"/>
            <Button Content="Delete this user" Command="{Binding DeleteUserCommand}" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource DeleteButtonTheme}"
                    Width="180" Height="40"/>
        </StackPanel>
        
    </Grid>
</UserControl>
